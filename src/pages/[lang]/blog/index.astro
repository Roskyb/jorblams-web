---
import { getCollection } from "astro:content";
import { LOCALES, type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

const posts = (await getCollection("blog"))
	.filter((post) => post.id.split("/")[0] === locale && !post.data.draft)
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

console.log(posts.at(0)?.data.cover);
const title = t({
	en: "Blog",
	es: "Blog",
});

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout {title}>
  <main class="min-h-screen bg-black text-white pt-32 px-8 md:px-16 lg:px-24 pb-20">
    <div class="max-w-6xl mx-auto">
      <!-- Page Title -->
      <div class="mb-16">
        <h1 class="text-6xl md:text-7xl font-bold mb-4">{title}</h1>
        <p class="text-gray-400 text-lg">
          {t({
            en: "Thoughts, tutorials, and insights about web development",
            es: "Reflexiones, tutoriales y conocimientos sobre desarrollo web",
          })}
        </p>
      </div>

      <!-- Posts List -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          {posts.map((post) => {
            const [, ...id] = post.id.split("/");
            const postUrl = `/${locale}/blog/${id.join("/")}/`;
            
            return (
              <article class="group">
                <a href={postUrl} class="flex flex-col md:flex-row gap-4 items-start">
                  <!-- Text Content (Left) -->
                  <div class="flex-1">
                    <time class="text-xs text-amber-200 font-medium">
                      {post.data.date.toLocaleDateString(locale, { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}
                    </time>
                    <h2 class="text-2xl md:text-3xl font-medium mt-2 mb-3 group-hover:text-amber-200 transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-gray-500 text-sm leading-relaxed mb-4">
                      {post.data.description}
                    </p>
                    
                    {/* Tags */}
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {post.data.tags.map((tag: any) => {
                          const tagName = tag.id.split('/').pop();
                          return (
                            <span class="text-xs px-3 py-1 rounded-full border border-white bg-transparent text-white">
                              {tagName}
                            </span>
                          );
                        })}
                      </div>
                    )}
                  </div>

                  <!-- Image (Right) -->
                  {post.data.cover && (
                    <div class="w-full md:w-64 aspect-square overflow-hidden transition-all duration-200 ease-in-out group-hover:rounded-[50%]">
                      <Image 
                        src={post.data.cover} 
                        alt={post.data.title}
                        width={400}
                        height={400}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-200"
                      />
                    </div>
                  )}
                </a>
              </article>
            );
          })}
        </div>
      ) : (
        <p class="text-gray-500 text-center py-20">
          {t({
            en: "No posts yet. Check back soon!",
            es: "Aún no hay publicaciones. ¡Vuelve pronto!",
          })}
        </p>
      )}
    </div>
  </main>
</Layout>
