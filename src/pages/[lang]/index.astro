---
import { LOCALES, type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/Base.astro";
const t = useTranslations(Astro.currentLocale as Lang);
import { getRelativeLocaleUrl } from "astro:i18n";

import { Image } from "astro:assets";

import { getCollection } from "astro:content";

const locale = Astro.currentLocale as Lang;

// Get projects filtered by locale and sorted by order/date
const allProjects = await getCollection("projects");
const projects = allProjects.sort((a, b) => {
	// Sort by order first, then by date (newest first)
	if (a.data.order !== b.data.order) {
		return (a.data.order || 0) - (b.data.order || 0);
	}
	return b.data.date.getTime() - a.data.date.getTime();
});

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout>
  <!-- Hero Section -->
  <main class="min-h-screen bg-black text-white pt-32 px-8 md:px-16 lg:px-24">
    <div class="max-w-6xl mx-auto">
      <!-- Introduction -->
      <div class="mb-20">
        <p class="text-amber-200 text-sm font-medium mb-4 tracking-wide">{t("greeting").toUpperCase()}</p>
        <h1 class="text-7xl md:text-8xl font-bold mb-6 leading-tight">
          Jorge<br />
          Blanco
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 max-w-2xl mb-8">
          {t("role")}
        </p>
        <p class="text-base text-gray-500 max-w-xl leading-relaxed">
          {t("intro")}
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex gap-4 mb-32">
        <a 
          href="#projects" 
          class="z-50 custom-cursor-trigger px-8 py-4 rounded-full border-2  border-white bg-white text-black font-medium hover:bg-black hover:border-white hover:text-white transition-all duration-300"
        >
          {t("cta.work")}
        </a>
        <a 
          href={getRelativeLocaleUrl(locale, "/about")} 
          class="z-50 custom-cursor-trigger px-8 py-4 rounded-full border-2 border-white bg-transparent text-white font-medium hover:bg-white hover:text-black transition-all duration-300"
        >
          {t("cta.about")}
        </a>
      </div>

      <!-- Skills Section -->
      <div class="grid md:grid-cols-2 gap-12 mb-20">
        <div>
          <h3 class="text-amber-200 text-sm font-medium mb-4 tracking-wide">{t("skills.development")}</h3>
          <ul class="space-y-2 text-gray-400">
            <li>Angular</li>
            <li>NestJS</li>
            <li>TypeScript <span class="text-amber-200">ðŸ’›</span></li>
            <li>Astro</li>
          </ul>
        </div>
        <div>
          <h3 class="text-amber-200 text-sm font-medium mb-4 tracking-wide">{t("skills.tools")}</h3>
          <ul class="space-y-2 text-gray-400">
            <li>Figma</li>
            <li>Git & GitHub</li>
            <li>VS Code</li>
            <li>Tailwind CSS</li>
          </ul>
        </div>
      </div>

      <!-- Featured Projects Preview -->
      <div id="projects" class="mb-32">
        <h2 class="text-4xl font-bold mb-12">{t("projects.title")}</h2>
        {projects.length > 0 ? (
          <div class="grid md:grid-cols-2 gap-8">
            {projects.map((project) => (
              <div class="group">
                <div class="bg-neutral-900 rounded-lg aspect-video mb-4 overflow-hidden">
                  
                  {project.data.cover ? (
                    <Image 
                      src={project.data.cover} 
                      width={800}
                      height={450}
                      alt={project.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  ) : (
                    <div class="w-full h-full bg-linear-to-br from-amber-200/20 to-transparent group-hover:scale-105 transition-transform duration-300"></div>
                  )}
                </div>
                <h3 class="text-xl font-medium mb-2 group-hover:text-amber-200 transition-colors">{project.data.title}</h3>
                <p class="text-gray-500 text-sm mb-3">{project.data.description}</p>
                {project.data.technologies && project.data.technologies.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-3">
                    {project.data.technologies.map((tech) => (
                      <span class="text-xs px-2 py-1 bg-neutral-800 text-amber-200 rounded">{tech}</span>
                    ))}
                  </div>
                )}
                <div class="flex gap-4 text-sm">
                  {project.data.github && project.data.github !== "" && (
                    <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-200 underline underline-offset-4 transition-colors duration-200">
                      GitHub
                    </a>
                  )}
                  {project.data.demo && project.data.demo !== "" && (
                    <a href={project.data.demo} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-200 underline underline-offset-4 transition-colors duration-200">
                      Demo
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <p class="text-gray-500">{t({ en: "No projects yet. Check back soon!", es: "AÃºn no hay proyectos. Â¡Vuelve pronto!" })}</p>
        )}

      <!-- Contact Section -->

    </div>
          <div class="pb-20">
        <h2 class="text-4xl font-bold mb-8">{t("contact.title")}</h2>
        <p class="text-gray-400 mb-8 max-w-xl">
          {t("contact.description")}
        </p>
        <div class="flex gap-6">
          <a href="mailto:jorge.blanco.gil.00@gmail.com" class="text-gray-400 hover:text-amber-200 underline underline-offset-4 transition-colors duration-200">
            jorge.blanco.gil.00@gmail.com
          </a>
          <a href="https://github.com/roskyb" class="text-gray-400 hover:text-amber-200 underline underline-offset-4 transition-colors duration-200">
            GitHub
          </a>
          <a href="https://www.linkedin.com/in/jorge-blanco-gil-b715182a6/" class="text-gray-400 hover:text-amber-200 underline underline-offset-4 transition-colors duration-200">
            LinkedIn
          </a>
        </div>
      </div>
  </main>

</Layout>
