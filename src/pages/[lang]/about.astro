---
import { LOCALES, type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/Base.astro";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout title={t("title")} description={t("subtitle")}>
  <main class="min-h-screen bg-black text-white pt-32 px-8 md:px-16 lg:px-24 pb-20">
    <div class="max-w-4xl mx-auto">
      <!-- Page Title -->
      <div class="mb-12">
        <h1 class="text-6xl md:text-7xl font-bold mb-6">
          {t("title")}
        </h1>
        <p class="text-xl text-gray-400">
          {t("subtitle")}
        </p>
      </div>

      <!-- Story Section -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-amber-200">
          {t("story.title")}
        </h2>
        <div class="space-y-4 text-gray-400 leading-relaxed">
          <p>{t("story.p1")}</p>
          <p>{t("story.p2")}</p>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-amber-200">
          {t("skills.title")}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-neutral-900 p-6 rounded-lg">
            <h3 class="text-xl font-medium mb-3 text-white">{t("skills.frontend.title")}</h3>
            <p class="text-gray-400 text-sm mb-4">
              {t("skills.frontend.description")}
            </p>
            <ul class="space-y-2 text-sm text-gray-500">
              <li>• Angular</li>
              <li>• TypeScript</li>
              <li>• Tailwind CSS</li>
              <li>• Astro</li>
            </ul>
          </div>

          <div class="bg-neutral-900 p-6 rounded-lg">
            <h3 class="text-xl font-medium mb-3 text-white">{t("skills.backend.title")}</h3>
            <p class="text-gray-400 text-sm mb-4">
              {t("skills.backend.description")}
            </p>
            <ul class="space-y-2 text-sm text-gray-500">
              <li>• NestJS</li>
              <li>• Node.js</li>
              <li>• REST APIs</li>
              <li>• Database Design</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Contact CTA -->
      <section class="text-center">
        <h2 class="text-3xl font-bold mb-4">
          {t("cta.title")}
        </h2>
        <p class="text-gray-400 mb-8">
          {t("cta.description")}
        </p>
        <a 
          href="mailto:jorge.blanco.gil.00@gmail.com" 
          class="custom-cursor-trigger btn-trigger btn-secondary"
        >
          <span class="relative z-10">{t("cta.button")}</span>
        </a>
      </section>
    </div>
  </main>
</Layout>
