---
import { getCollection } from "astro:content";
import { LOCALES, type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

const posts = (await getCollection("blog"))
	.filter((post) => post.id.split("/")[0] === locale && !post.data.draft)
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

console.log(posts.at(0)?.data.cover);
const title = t({
	en: "Blog",
	es: "Blog",
});

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout {title}>
  <main class="min-h-screen bg-black text-white pt-32 px-8 md:px-16 lg:px-24 pb-20">
    <div class="max-w-6xl mx-auto">
      <!-- Page Title -->
      <div class="mb-16">
        <h1 class="text-6xl md:text-7xl font-bold mb-4">{title}</h1>
        <p class="text-gray-400 text-lg">
          {t({
            en: "Thoughts, tutorials, and insights about web development",
            es: "Reflexiones, tutoriales y conocimientos sobre desarrollo web",
          })}
        </p>
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => {
            const [, ...id] = post.id.split("/");
            const postUrl = `/${locale}/blog/${id.join("/")}/`;
            
            return (
              <article class="group">
                <a href={postUrl} class="block">
                  {post.data.cover && (
                    <div class="aspect-video mb-4 overflow-hidden rounded-lg bg-neutral-900">
                      <Image 
                        src={post.data.cover} 
                        alt={post.data.title}
                        width={640}
                        height={360}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  <time class="text-xs text-amber-200 font-medium">
                    {post.data.date.toLocaleDateString(locale, { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                  <h2 class="text-xl font-medium mt-2 mb-3 group-hover:text-amber-200 transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-gray-500 text-sm line-clamp-3">
                    {post.data.description}
                  </p>
                </a>
              </article>
            );
          })}
        </div>
      ) : (
        <p class="text-gray-500 text-center py-20">
          {t({
            en: "No posts yet. Check back soon!",
            es: "Aún no hay publicaciones. ¡Vuelve pronto!",
          })}
        </p>
      )}
    </div>
  </main>
</Layout>
